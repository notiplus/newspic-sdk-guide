<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/sample_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_light"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:paddingHorizontal="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <kr.newspic.android.sdk.NewspicSDKView
                xmlns:newspic="http://schemas.android.com/apk/res-auto"
                android:id="@+id/newspic_sdk_single_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:newspicSDKUnitId="demo"
                app:newspicSDKViewType="SIGLE_LINE"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
